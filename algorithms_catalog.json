    "spectral_indices": {
      "name": "光谱指数",
      "description": "基于光谱波段计算的植被、水体、土壤等指数",
      "algorithms": [
        {
          "id": "ndvi",
          "name": "NDVI (归一化植被指数)",
          "description": "监测植被健康和覆盖度",
          "formula": "(NIR - Red) / (NIR + Red)",
          "inputBands": ["NIR", "Red"],
          "outputType": "单波段栅格 (-1 to 1)",
          "applications": ["农业监测", "森林健康", "植被覆盖"],
          "dataSources": ["Sentinel-2", "Landsat 8/9", "MODIS"],
          "processingTime": "< 30秒",
          "cloudReady": true,
          "libraries": ["rasterio", "numpy"],
          "codeExample": "ndvi = (nir - red) / (nir + red)"
        },
        {
          "id": "ndwi",
          "name": "NDWI (归一化水体指数)",
          "description": "识别和监测水体",
          "formula": "(Green - NIR) / (Green + NIR)",
          "inputBands": ["Green", "NIR"],
          "outputType": "单波段栅格 (-1 to 1)",
          "applications": ["水体提取", "洪水监测", "湿地分析"],
          "dataSources": ["Sentinel-2", "Landsat 8/9"],
          "processingTime": "< 30秒",
          "cloudReady": true,
          "libraries": ["rasterio", "numpy"]
        },
        {
          "id": "evi",
          "name": "EVI (增强植被指数)",
          "description": "改进的植被指数，减少土壤和大气影响",
          "formula": "2.5 * ((NIR - Red) / (NIR + 6*Red - 7.5*Blue + 1))",
          "inputBands": ["NIR", "Red", "Blue"],
          "outputType": "单波段栅格",
          "applications": ["高植被覆盖区监测", "热带雨林", "农业"],
          "dataSources": ["Sentinel-2", "Landsat", "MODIS"],
          "processingTime": "< 30秒",
          "cloudReady": true,
          "libraries": ["rasterio", "numpy"]
        },
        {
          "id": "savi",
          "name": "SAVI (土壤调节植被指数)",
          "description": "减少土壤背景影响的植被指数",
          "formula": "((NIR - Red) / (NIR + Red + L)) * (1 + L)",
          "inputBands": ["NIR", "Red"],
          "parameters": {"L": {"default": 0.5, "range": [0, 1], "description": "土壤亮度校正因子"}},
          "outputType": "单波段栅格",
          "applications": ["稀疏植被", "干旱区", "土壤暴露区"],
          "dataSources": ["Sentinel-2", "Landsat"],
          "processingTime": "< 30秒",
          "cloudReady": true,
          "libraries": ["rasterio", "numpy"]
        },
        {
          "id": "ndbi",
          "name": "NDBI (归一化建筑指数)",
          "description": "识别建筑用地和城市区域",
          "formula": "(SWIR - NIR) / (SWIR + NIR)",
          "inputBands": ["SWIR", "NIR"],
          "outputType": "单波段栅格",
          "applications": ["城市扩张", "建筑提取", "土地利用"],
          "dataSources": ["Sentinel-2", "Landsat"],
          "processingTime": "< 30秒",
          "cloudReady": true,
